<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:background="#ffffe6c6"
            >
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/back_to_last"
                   android:layout_centerVertical="true"
                   android:id="@+id/resetPassRet"
                />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/reset_pwd"
                  android:layout_centerInParent="true"
                />
    </RelativeLayout>
    <EditText android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:background="@drawable/edit_style"
              android:hint="@string/mail_for_reset"
              android:id="@+id/etMailForReset"
            />
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="right">
        <Button android:layout_width="347dp" android:layout_height="wrap_content"
                android:background="@drawable/login_button_style"
                android:text="@string/reset_pwd"
                android:layout_marginTop="10dp"
                android:id="@+id/bResetPass"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>